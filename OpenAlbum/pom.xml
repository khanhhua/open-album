  <artifactId>OpenAlbum</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>OpenAlbum</name>
  <description>Open source album viewer for SD card</description>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
